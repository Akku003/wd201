<!-- views/todos.ejs -->
<table class="todo-table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Due Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        <% allTodos.forEach(todo=> { %>
            <tr>
                <td>
                    <%= todo.id %>
                </td>
                <td>
                    <%= todo.title %>
                </td>
                <td>
                    <%= todo.dueDate.toISOString().split('T')[0] %>
                </td>
                <td>
                    <%= todo.completed ? 'Completed' : 'Pending' %>
                </td>
            </tr>
            <% }) %>
    </tbody>
</table>