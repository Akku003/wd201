<!-- views/todos.ejs -->
<table class="todo-table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Due Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        <% allTodos.forEach(todo=> { %>
            <tr>
                <td>
                    <%= todo.id %>
                </td>
                <td>
                    <%= todo.title %>
                </td>
                <td>
                    <% let displayDate='' ; if (todo.dueDate) { const dateObj=new Date(todo.dueDate);
                        displayDate=isNaN(dateObj) ? todo.dueDate : dateObj.toISOString().split('T')[0]; } %>
                        <%= displayDate %>
                </td>
                <td>
                    <%= todo.completed ? 'Completed' : 'Pending' %>
                </td>
            </tr>
            <% }) %>
    </tbody>
</table>